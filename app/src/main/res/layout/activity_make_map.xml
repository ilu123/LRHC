<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:joystick="http://schemas.android.com/apk/res-auto"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark"
    android:paddingTop="4dp"
    android:paddingBottom="5dp"
    android:paddingRight="10dp"
    android:paddingLeft="10dp">

    <View
        android:id="@+id/center_view"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true" />

    <FrameLayout
        android:id="@+id/flleft"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_toLeftOf="@+id/frame_dot"
        android:layout_toStartOf="@+id/frame_dot"
        android:background="#000">

        <com.lrkj.utils.LrSocketSurfaceView
            android:id="@+id/camera_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            opencv:camera_id="4100"
            opencv:show_fps="false" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frame_dot"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_alignLeft="@+id/center_view"
        android:layout_alignTop="@+id/flleft"
        android:layout_marginLeft="10dp"
        android:background="#000">

        <com.lrkj.utils.LrSocketSurfaceView
            android:id="@+id/camera_dot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            opencv:camera_id="4097"
            opencv:show_fps="false" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:background="#66000000"
        android:gravity="center_vertical|right"
        android:paddingRight="5dp"
        android:text="status"
        android:textColor="#fff"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:splitMotionEvents="true">

        <com.lrkj.widget.JoystickHVView
            android:id="@+id/joystick_ver"
            android:layout_width="40dp"
            android:layout_height="100dp"
            android:layout_marginRight="15dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <info.hoang8f.widget.FButton
                    android:id="@+id/btn_reset"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:onClick="onClickBtn"
                    android:text="重置地图"
                    android:textColor="#fff"
                    android:textSize="12sp"
                    fbutton:buttonColor="@color/fbutton_color_alizarin"
                    fbutton:shadowEnabled="true" />

                <info.hoang8f.widget.FButton
                    android:id="@+id/btn_finish"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:onClick="onClickBtn"
                    android:text="@string/btn_finish_map"
                    android:textColor="#fff"
                    android:textSize="12sp"
                    fbutton:buttonColor="@color/fbutton_color_sun_flower"
                    fbutton:shadowEnabled="true" />

                <info.hoang8f.widget.FButton
                    android:id="@+id/btn_save"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:onClick="onClickBtn"
                    android:text="@string/btn_save_map"
                    android:textColor="#fff"
                    android:textSize="12sp"
                    fbutton:buttonColor="@color/fbutton_color_turquoise"
                    fbutton:shadowEnabled="true" />

                <info.hoang8f.widget.FButton
                    android:visibility="invisible"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="onClickBtn"
                    android:text="@string/btn_exit_map"
                    android:textColor="#fff"
                    android:textSize="12sp"
                    fbutton:buttonColor="@color/fbutton_color_wet_asphalt"
                    fbutton:shadowEnabled="true" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <info.hoang8f.widget.FButton
                    android:id="@+id/btn_start_laser"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:onClick="onClickBtn"
                    android:text="开启Laser"
                    android:textColor="#fff"
                    android:textSize="12sp"
                    fbutton:buttonColor="@color/fbutton_color_turquoise"
                    fbutton:shadowEnabled="true" />

                <info.hoang8f.widget.FButton
                    android:id="@+id/btn_reset_laser"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:onClick="onClickBtn"
                    android:text="重置Laser"
                    android:textColor="#fff"
                    android:textSize="12sp"
                    fbutton:buttonColor="@color/fbutton_color_alizarin"
                    fbutton:shadowEnabled="true" />

                <info.hoang8f.widget.FButton
                    android:id="@+id/btn_save_laser"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:onClick="onClickBtn"
                    android:text="保存Laser"
                    android:textColor="#fff"
                    android:textSize="12sp"
                    fbutton:buttonColor="@color/fbutton_color_sun_flower"
                    fbutton:shadowEnabled="true" />

                <info.hoang8f.widget.FButton
                    android:id="@+id/btn_exit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="onClickBtn"
                    android:text="@string/btn_exit_map"
                    android:textColor="#fff"
                    android:textSize="12sp"
                    fbutton:buttonColor="@color/fbutton_color_wet_asphalt"
                    fbutton:shadowEnabled="true" />
            </LinearLayout>

        </LinearLayout>

        <com.lrkj.widget.JoystickHVView
            android:id="@+id/joystick_hor"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="15dp"
            joystick:isHor="true" />

    </LinearLayout>


</RelativeLayout>